<%- layout("/layout/biolerplate.ejs") %>
  <% if (error && error.length> 0) { %>
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
      <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

      <body class="bg-pink-200">
        <div class="max-w-lg mx-auto my-8 p-6 bg-white shadow-md rounded-lg">
          <h3 class="text-2xl font-semibold text-gray-800 mb-6">List Your House</h3>
          <form novalidate action="/listings" method="post" class="space-y-6" enctype="multipart/form-data">

            <!-- Title -->
            <div class="mb-4">
              <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
              <input id="title" class="form-control w-full border-gray-300 rounded-md shadow-sm" type="text"
                placeholder="Enter Your title" name="title" required />
            </div>

            <!-- Description -->
            <div class="mb-4">
              <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
              <textarea id="description" class="form-control w-full border-gray-300 rounded-md shadow-sm"
                placeholder="Enter Your description" name="description" rows="4" required></textarea>
            </div>

            <!-- Image Upload -->
            <div class="mb-4">
              <label for="img" class="block text-sm font-medium text-gray-700 mb-1">Upload Image</label>
              <input type="file" id="img" name="img_file" accept="image/*"
                class="block w-full text-sm text-gray-500 border border-gray-300 rounded-md cursor-pointer focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-opacity-50" />
            </div>

            <!-- Price -->
            <div class="mb-4">
              <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price</label>
              <input id="price" class="form-control w-full border-gray-300 rounded-md shadow-sm"
                placeholder="Enter Your price" name="price" type="number" min="0" step="0.01" required />
            </div>

            <!-- Location -->
            <div class="mb-4">
              <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
              <input id="location" class="form-control w-full border-gray-300 rounded-md shadow-sm" type="text"
                placeholder="Enter Your location" name="location" />
            </div>

            <!-- Country -->
            <div class="mb-4">
              <label for="country" class="block text-sm font-medium text-gray-700 mb-1">Country</label>
              <input id="country" class="form-control w-full border-gray-300 rounded-md shadow-sm" type="text"
                placeholder="Enter Your country" name="country" />
            </div>
            <!-- bathroom -->
            <div class="mb-4">
              <label for="bed" class="block text-sm font-medium text-gray-700 mb-1">bed</label>
              <input id="bed" class="form-control w-full border-gray-300 rounded-md shadow-sm" type="text"
                placeholder="Enter total no of bed" name="bed" />
            </div>
            <!-- bed -->
            <div class="mb-4">
              <label for="bathroom" class="block text-sm font-medium text-gray-700 mb-1">bathroom</label>
              <input id="bathroom" class="form-control w-full border-gray-300 rounded-md shadow-sm" type="text"
                placeholder="Enter no of bathroom" name="bathroom" />
            </div>
            <!-- area -->
            <div class="mb-4">
              <label for="areaHousewidth" class="block text-sm font-medium text-gray-700 mb-1">areaHousewidth</label>
              <input id="areaHousewidth" class="form-control w-full border-gray-300 rounded-md shadow-sm" type="text"
                placeholder="Enter Your width" name="areaHousewidth" />
            </div>
            <div class="mb-4">
              <label for="areaHouseheight" class="block text-sm font-medium text-gray-700 mb-1">areaHouseheight</label>
              <input id="areaHouseheight" class="form-control w-full border-gray-300 rounded-md shadow-sm" type="text"
                placeholder="Enter Your height" name="areaHouseheight" />
            </div>
            <!-- type of typeofhouse  -->
            <div class="mb-4">
              <label for="typeofhouse" class="block text-sm font-medium text-gray-700 mb-1">typeofhouse</label>
              <input id="typeofhouse" class="form-control w-full border-gray-300 rounded-md shadow-sm" type="text"
                placeholder="rent/sell" name="typeofhouse" />
            </div>
            <!-- categories -->
            <div class="mb-4">
              <label for="categories" class="block text-sm font-medium text-gray-700 mb-1">categories</label>
              <input id="categories" class="form-control w-full border-gray-300 rounded-md shadow-sm" type="text"
                placeholder="Enter Your categories like mountain ,studio,tree" name="categories" />
            </div>
            <!-- Submit Button -->
            <button type="submit"
              class="w-full bg-pink-500 text-white py-2 px-4 rounded-md shadow-sm hover:bg-pink-600">Submit</button>
          </form>
        </div>
      </body>