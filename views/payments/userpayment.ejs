<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-md-6 col-lg-4">
                <h1 class="text-center mb-4">Verify Your Details</h1>
                <form action="/listings/<%= id %>/create_customer" method="POST">
                    <div class="form-group mb-3">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="capture">Capture:</label>
                        <input type="number" class="form-control" id="capture" placeholder="Capture" required>
                        <p id="displaycap" class="font-weight-bold mt-2"></p>
                    </div>
                    <button type="submit" class="btn btn-primary w-100" id="verify" disabled>Verify</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        const verifyButton = document.getElementById("verify");
        const userInput = document.getElementById("capture");
        const displayCap = document.getElementById("displaycap");

        const randomNumber = Math.floor(Math.random() * 10000);

        // Update the paragraph with the random number
        displayCap.textContent = `User Captcha: ${randomNumber}`;

        // Function to check if the user input matches the random number
        function checkAndShowVerifyButton() {
            if (parseInt(userInput.value) === randomNumber) {
                verifyButton.disabled = false;
            } else {
                verifyButton.disabled = true;
            }
        }

        // Listen for input changes on the capture field
        userInput.addEventListener('input', checkAndShowVerifyButton);
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>