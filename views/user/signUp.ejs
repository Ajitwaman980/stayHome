<% layout("/layout/biolerplate.ejs") -%>
    <!-- <link rel="stylesheet" href="/stylesheets/user.css" />
<link rel="stylesheet" href="/stylesheets/style.css" /> -->

    <% if (error && error.length> 0) { %>
        <div class="alert alert-warning alert-dismissible fade show text-center mb-4 bg-red-500 text-white p-3 rounded">
            <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
            <div class="h-screen  bg-zinc-400 items-center py-20">
                <div class="bg-white p-6 rounded-lg shadow-lg  w-full max-w-sm mx-auto mt-8">
                    <h1 class="text-2xl font-bold mb-4 text-center">Sign Up</h1>
                    <form action="/signUp" method="post" class="space-y-4">
                        <input class="w-full p-2 border border-gray-300 rounded-lg focus:border-blue-500 outline-none"
                            type="text" placeholder="Enter your username" name="username" id="username" required />
                        <input class="w-full p-2 border border-gray-300 rounded-lg focus:border-blue-500 outline-none"
                            type="email" placeholder="Enter your email" name="email" id="email" required />
                        <input class="w-full p-2 border border-gray-300 rounded-lg focus:border-blue-500 outline-none"
                            type="password" placeholder="Enter your password" name="password" id="password" />
                        <button onclick="return passwordval()" type="submit"
                            class="w-full py-2 bg-green-500 text-white rounded-lg hover:bg-green-600">
                            Sign Up
                        </button>
                    </form>
                </div>
            </div>

            <script src="/javascripts/passwordval.js"></script>
            <script src="/javascripts/loginpassword.js"></script>