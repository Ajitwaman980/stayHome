      <!-- desktop view -->
      <% if (currentUsser) { %>
        <a id="addlist"
          class="nav-link w-40 flex text-1xl justify-center font-sans font-bold bg-green-600 text-white p-2 rounded-lg"
          href="/listings/new">Add Property</a>

        <!-- <a class="nav-link text-gray-700 rounded-3xl " href="/logout"></a> -->
        <div id="desklogout"
          class="bg-black cursor-default rounded-full mr-2 w-12 h-12 flex items-center justify-center">
          <span class="text-white  first_words">
            <%=currentUsser.username[0].toUpperCase() %>
          </span>
          <div class="bg-white border w-auto  mt-48 mr-64   z-10  hidden" id="dropdown">
            <ul class=" text-gray-700 font-semibold w-64 h-44 p-2 space-y-4">

              <li class="flex w-full items-center py-1 border-b-2">
                <!-- Initials Circle -->
                <div
                  class="bg-black cursor-default rounded-full mt-0 mr-4 w-7 h-7 border-b-black flex items-center justify-center">
                  <span class="text-white text-sm">
                    <%= currentUsser.username[0].toUpperCase() %>
                  </span>
                </div>

                <!-- User Info (Username & Email) -->
                <div class="flex flex-col">
                  <span class="font-sans">
                    <%= currentUsser.username %>
                  </span>
                  <span class="text-gray-600 font-thin">
                    <%= currentUsser.email %>
                  </span>
                </div>
              </li>
