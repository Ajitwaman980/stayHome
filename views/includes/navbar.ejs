      <form action="/listings/user/search" method="post" class="flex items-center w-full max-w-lg">
        <input type="text" name="search_content"
          class="flex-grow p-2 borderflex-grow  border border-gray-300 rounded-l-full focus:border-blue-500 outline-none "
          placeholder="Search Your Hotel">
        <button type="submit" class="p-2 border rounded-r-full bg-blue-500 text-white hover:bg-blue-700">
          <i class="fa-solid fa-search"></i>
        </button>
      </form>
    </div>
